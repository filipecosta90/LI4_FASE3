
@{
    ViewBag.Title = "Importar";
}

<h2>Importar</h2>


@using (Html.BeginForm("Importar", "Sincronizacao", null, FormMethod.Post, new { enctype = "multipart/form-data" }))


{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Evento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="container">
                    <div class="form-group">
                        <div class="col-md-offset-4">
                            Documento com dados a importar:
                            <input type="file" id="documento" name="upload" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Importar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "IndexAdmin", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
